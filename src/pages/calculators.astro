---
import Layout from '../layouts/Layout.astro';
import ToolSearch from '../components/ToolSearch.svelte';
import SupportPrompt from '../components/SupportPrompt.svelte';
import { Calculator } from 'lucide-svelte';
---

<Layout
    title="All Calculators - EMT Calculator Tools"
    description="Browse and search through all available medical calculators for EMTs, AEMTs, and Paramedics."
    showBackButton={true}
>
    <div class="max-w-6xl mx-auto">
        <!-- Page Header -->
        <div class="text-center mb-8">
            <div class="flex items-center justify-center gap-3 mb-4">
                <Calculator class="w-10 h-10 theme-accent-primary" />
                <h1 class="text-4xl font-bold theme-accent-primary">All Calculators</h1>
            </div>
            <p class="text-xl theme-text-secondary max-w-3xl mx-auto">
                Find the right medical calculator for your needs. Search by name, category, or keywords.
            </p>
        </div>

        <!-- Support Prompt -->
        <SupportPrompt variant="prominent" client:load />

        <!-- Search and Results -->
        <ToolSearch
            category="calculator"
            placeholder="Search calculators (e.g., oxygen, airway, medication)..."
            client:load
        />

        <!-- Quick Categories -->
        <div class="mt-12 p-6 theme-bg-secondary rounded-lg border theme-border-primary">
            <h2 class="text-lg font-semibold theme-text-primary mb-4">Browse by Category</h2>
            <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
